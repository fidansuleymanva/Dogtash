	<!-- Layout wrapper -->
	<div class="layout-wrapper layout-content-navbar">
		<div class="layout-container">
			<!-- Menu -->
			<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
				<div class="app-brand demo">
					<a asp-action="index" asp-controller="dashboard" class="app-brand-link">
						<img src="~/manage/assets/img/logo-colored.svg" style="width:100px;" />
					</a>

					<a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
						<i class="bx bx-chevron-left bx-sm align-middle"></i>
					</a>
				</div>

				<div class="menu-inner-shadow"></div>

				<ul class="menu-inner py-1">
					<!-- Dashboard -->
					<li class="menu-item ">
						<a asp-action="Index" asp-controller="Dashboard" class="menu-link">
							<i class="menu-icon tf-icons bx bx-home-circle"></i>
							<div data-i18n="Analytics">Dashboard</div>
						</a>
					</li>
					<li class="menu-item">
						<a asp-action="Index" asp-controller="Setting" class="menu-link">
							<i class='menu-icon tf-icons bx bx-cog'></i>
							<div data-i18n="Analytics">Settings</div>
						</a>
					</li>
					<li class="menu-item">
						<a asp-action="Index" asp-controller="Category" class="menu-link">
							<i class='menu-icon tf-icons bx bx-cog'></i>
							<div data-i18n="Analytics">@localizer["Category"]</div>
						</a>
					</li>
					<li class="menu-item">
						<a asp-action="Index" asp-controller="SubCategory" class="menu-link">
							<i class='menu-icon tf-icons bx bx-cog'></i>
							<div data-i18n="Analytics">@localizer["SubCategory"]</div>
						</a>
					</li>
					<li class="menu-item">
						<a asp-action="Index" asp-controller="Slider" class="menu-link">
							<i class='menu-icon tf-icons bx bx-cog'></i>
							<div data-i18n="Analytics">@localizer["Slider"]</div>
						</a>
					</li>
					<li class="menu-item">
						<a asp-action="Index" asp-controller="MenuSlider" class="menu-link">
							<i class='menu-icon tf-icons bx bx-cog'></i>
							<div data-i18n="Analytics">@localizer["Menu Slider"]</div>
						</a>
					</li>
					<li class="menu-item">
						<a asp-action="Index" asp-controller="StorePalacedType" class="menu-link">
							<i class='menu-icon tf-icons bx bx-cog'></i>
							<div data-i18n="Analytics">@localizer["Store Palaced Type"]</div>
						</a>
					</li>
					<li class="menu-item">
						<a asp-action="Index" asp-controller="Store" class="menu-link">
							<i class='menu-icon tf-icons bx bx-cog'></i>
							<div data-i18n="Analytics">@localizer["Store"]</div>
						</a>
					</li>
					<li class="menu-item">
						<a asp-action="Index" asp-controller="Collection" class="menu-link">
							<i class='menu-icon tf-icons bx bx-cog'></i>
							<div data-i18n="Analytics">@localizer["Collection"]</div>
						</a>
					</li>
					<li class="menu-item">
						<a asp-action="Index" asp-controller="SosialMedia" class="menu-link">
							<i class='menu-icon tf-icons bx bx-cog'></i>
							<div data-i18n="Analytics">@localizer["SosialMedia"]</div>
						</a>
					</li>
				</ul>
			</aside>
			<!-- / Menu -->
			<!-- Layout container -->
			<div class="layout-page">
				<!-- Navbar -->
				@* <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
					id="layout-navbar" style="padding: 0px;box-shadow: none;">*@
				<div class="custom-navbar-container">
					<nav class="custom-navbar" id="custom-navbar">
						<style>
							.custom-navbar-container {
								padding: 0px;
								box-shadow: none;
								style ="padding: 0px;box-shadow: none;
							}

							.custom-navbar {
								
							}

						</style>

						<h3 class="d-flex align-items-center title" style="height: 100%;background: #F5F5F9;margin:0px">
							@TempData["Title"]
