                'MathType',
                // The following features are part of the Productivity Pack and require additional license.
                'SlashCommand',
                'Template',
                'DocumentOutline',
                'FormatPainter',
                'TableOfContents'
            ]
        }).then(editor => {
            editor.model.document.on('change:data', (evt, data) => {
                textArea.value = editor.getData();
            });
        })
            .catch(error => {
                console.error(error);
            });;
    </script>


}
